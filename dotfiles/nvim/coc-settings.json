{
  // diagnostic-languageserver
  "diagnostic-languageserver.filetypes": {
    "Dockerfile": "hadolint",
    "sh": "shellcheck",
    "yaml": [ "yamllint" ],
    "systemd": "systemd-analyze"
  },
  // language server
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "trace.server": "verbose",
      "filetypes": ["nix"]
    }
  },
  // Python
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.pythonPath": "nvim-python3"
}
